<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splashBackground"
    android:fitsSystemWindows="true">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Custom Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/headerBackgroundColor"
            android:elevation="4dp"
            android:padding="8dp">

            <!-- Logout Icon (Top Left) -->
            <ImageView
                android:id="@+id/logoutButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="start"
                android:contentDescription="Logout"
                android:src="@drawable/logout_circle_fill_icon"
                app:tint="@color/buttonBorderColor" />

            <!-- Header Text (Top Center) -->
            <TextView
                android:id="@+id/headerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/aclonica"
                android:text="Creaturo"
                android:textColor="@color/primaryColor"
                android:textSize="28sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <!-- Introduction Text -->
                <TextView
                    android:id="@+id/introductionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="This app helps you discover or identify various types of animals."
                    android:textColor="@color/secondaryColor"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Example Image or Content -->
                <ImageView
                    android:id="@+id/contentImageView"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/img"
                    android:contentDescription="Main Content Image" />

                <!-- Recognize Button -->
                <Button
                    android:id="@+id/recognizeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Recognize"
                    android:textColor="@color/buttonTextColor"
                    android:backgroundTint="@color/buttonColor"
                    android:visibility="gone" />

                <!-- Clear Button -->
                <Button
                    android:id="@+id/clearButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Clear"
                    android:textColor="@color/buttonTextColor"
                    android:backgroundTint="@color/buttonColor"
                    android:visibility="gone" />

                <!-- Content TextView (For displaying result) -->
                <TextView
                    android:id="@+id/contentTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:textColor="@color/secondaryColor"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" />

                <!-- Buttons Section -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">

                    <!-- Select Image Button -->
                    <Button
                        android:id="@+id/selectImageButton"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:text="Select Image"
                        android:textColor="@color/buttonTextColor"
                        android:backgroundTint="@color/buttonColor" />

                    <!-- Take Picture Button -->
                    <Button
                        android:id="@+id/takePictureButton"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Take Picture"
                        android:textColor="@color/buttonTextColor"
                        android:backgroundTint="@color/buttonColor" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- Bottom Navigation View -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemIconTint="@color/buttonColor"
            app:itemTextColor="@color/buttonColor"
            app:menu="@menu/bottom_nav_menu" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
